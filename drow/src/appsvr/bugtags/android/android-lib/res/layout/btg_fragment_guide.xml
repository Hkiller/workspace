<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/btg_guide_view_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/btg_bg_guide"
        android:orientation="vertical"
        android:padding="@dimen/btg_global_margin_large">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btg_guide_sub_0"
            android:textColor="@android:color/white"
            android:textSize="@dimen/btg_global_font_big"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/btg_global_margin_tiny"
            android:layout_marginTop="@dimen/btg_global_margin_standard"
            android:text="@string/btg_guide_sub_1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/btg_global_font_less_big"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/btg_global_margin_standard"
            android:src="@drawable/btg_icon_tips_tag_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/btg_global_margin_tiny"
            android:layout_marginTop="@dimen/btg_global_margin_standard"
            android:text="@string/btg_guide_sub_2"
            android:textColor="@android:color/white"
            android:textSize="@dimen/btg_global_font_less_big"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/btg_global_margin_standard"
            android:src="@drawable/btg_icon_tips_tag_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/btg_global_margin_tiny"
            android:layout_marginTop="@dimen/btg_global_margin_standard"
            android:text="@string/btg_guide_sub_3"
            android:textColor="@android:color/white"
            android:textSize="@dimen/btg_global_font_less_big"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/btg_global_margin_standard"
            android:src="@drawable/btg_icon_tips_tag_3"/>

        <Button
            android:id="@+id/okButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btg_guide_button_height"
            android:layout_marginTop="@dimen/btg_global_margin_great"
            android:background="@drawable/btg_btn_blue_rect"
            android:text="@string/btg_global_got_it"
            android:textColor="@android:color/white"
            android:textSize="@dimen/btg_global_font_big"/>

    </LinearLayout>

</RelativeLayout>